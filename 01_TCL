set ns [new Simulator]

set ntrace [open name.tr w]
$ns trace-all $ntrace
set nametrace [open name.nam w]
$ns namtrace-all $namtrace

porc Finish {} {
global ns ntrace namfile 
$ns flush-trace
close $ntrace
close $namtrace
exec nam name.nam &
exec echo "Number of pakets dropped are: " &
exec grep -c "^d" name.tr &
exit 0
}

set n0 [$ns node]
set n1 [$ns node]
set n2 [$ns node]

$n0 label "Source"
$n2 label "Destination"

$ns duplex-link $n0 $n1 1Mb 10ms DropTail
$ns duplex-link $n1 $n2 1Mb 10ms DropTail

$ns duplex-link-op $n0 $n1 orient right
$ns duplex-link-op $n1 $n2 orient right

$ns queue-limit $n0 $n1 10
$ns queue-limit $n1 $n2 10

set trc0 [new Agent/TRC]
$ns attach-agent $n0 $trc0
set sink0 [new Agent/TRCSink]
$ns attach-agent $n2 $sink0
$ns connect $trc0 $sink0

set cbr0 [new Application/Traffic/CBR]
$cbr0 set type_ CBR
$cbr0 set packetSize_ 100
$cbr0 set rate_ 1Mb
$cbr0 set random_ false
$cbr0 attach-agent $trc0
$trc0 set class_ 1

$ns at 0.0 ["$cbr0 start"]
$ns at 5.0 ["Finish"]

$ns run
